<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#F0F4C3">

    <TextView
        android:text="Аня, встав тут знизу главу книжкі:"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWhatToDo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="РА"
        android:id="@+id/btnRA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tvSpecialForAnn"
        android:layout_toStartOf="@+id/tvSpecialForAnn" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="100"
        android:inputType="textMultiLine"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="top"
        android:text="@string/raChapter"
        android:id="@+id/etChapter"
        android:layout_below="@+id/tvWhatToDo"
        android:layout_above="@id/btnRA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#22e9ff45" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="специально для Ані от Андрєя"
        android:paddingLeft="20dp"
        android:id="@+id/tvSpecialForAnn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
